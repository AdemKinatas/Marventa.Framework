{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // Marventa Framework Configuration
  // IMPORTANT: Framework reads configuration from this file via IConfiguration
  // Usage: builder.Services.AddMarventaFramework(builder.Configuration, options => {...})
  "Marventa": {
    // API Key Authentication - Choose ONE of the following approaches:

    // Option 1: Single API Key
    "ApiKey": "your-secret-api-key-here",

    // Option 2: Multiple API Keys (if both are provided, ApiKeys array takes precedence)
    "ApiKeys": [
      "admin-api-key-123",
      "service-api-key-456",
      "mobile-app-key-789"
    ],

    // API Key Settings
    "ApiKey": {
      "SkipPaths": [
        "/health",
        "/swagger",
        "/api/docs",
        "/favicon.ico",
        "/metrics"
      ]
    },

    // Rate Limiting Configuration
    "RateLimit": {
      "MaxRequests": 100,     // Maximum requests per window
      "WindowMinutes": 15     // Time window in minutes
    },

    // Caching Configuration
    "Caching": {
      "Provider": "Memory"  // Options: "Memory", "Redis"
    },

    // Storage Configuration
    "Storage": {
      "Provider": "LocalFile",  // Options: "LocalFile", "Cloud"
      "BasePath": "uploads"
    },

    // Connection Strings
    "ConnectionStrings": {
      "DefaultConnection": "your-database-connection-string",
      "Redis": "your-redis-connection-string",
      "Storage": "your-cloud-storage-connection-string"
    },

    // Feature Toggles - All 47 Enterprise Features Available
    "Features": {
      // Core Infrastructure (6 features)
      "EnableLogging": true,
      "EnableCaching": true,
      "EnableRepository": true,
      "EnableHealthChecks": true,
      "EnableValidation": true,
      "EnableExceptionHandling": true,

      // Security & Authentication (4 features)
      "EnableSecurity": true,
      "EnableJWT": true,
      "EnableApiKeys": true,
      "EnableEncryption": true,

      // Communication Services (3 features)
      "EnableEmail": true,
      "EnableSMS": true,
      "EnableHttpClient": true,

      // Data & Storage (5 features)
      "EnableStorage": true,
      "EnableFileProcessor": true,
      "EnableMetadata": true,
      "EnableDatabaseSeeding": false,
      "EnableSeeding": false,

      // API Management (4 features)
      "EnableVersioning": true,
      "EnableRateLimiting": true,
      "EnableCompression": true,
      "EnableIdempotency": false,

      // Performance & Scalability (5 features)
      "EnableDistributedLocking": false,
      "EnableCircuitBreaker": false,
      "EnableBatchOperations": false,
      "EnableAdvancedCaching": false,
      "EnableCDN": false,

      // Monitoring & Analytics (4 features)
      "EnableAnalytics": false,
      "EnableObservability": false,
      "EnableTracking": false,
      "EnableFeatureFlags": false,

      // Background Processing (3 features)
      "EnableBackgroundJobs": false,
      "EnableMessaging": false,
      "EnableDeadLetterQueue": false,

      // Enterprise Architecture (5 features)
      "EnableMultiTenancy": false,
      "EnableEventDriven": false,
      "EnableCQRS": false,
      "EnableSagas": false,
      "EnableProjections": false,

      // Search & AI (3 features)
      "EnableSearch": false,
      "EnableML": false,
      "EnableRealTimeProjections": false,

      // Business Features (5 features)
      "EnableECommerce": false,
      "EnablePayments": false,
      "EnableShipping": false,
      "EnableFraudDetection": false,
      "EnableInternationalization": false
    }
  },

  // CORS Configuration
  "Cors": {
    "Origins": [
      "https://yourdomain.com",
      "https://localhost:3000",
      "https://localhost:5173"
    ]
  },

  // Serilog Configuration (if using Serilog)
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/marventa-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  }
}