<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Configuration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>Marventa.Framework</PackageId>
    <PackageVersion>3.3.1</PackageVersion>
    <VersionPrefix>3.3.1</VersionPrefix>
    <VersionSuffix Condition="'$(VersionSuffix)' == ''"></VersionSuffix>
    <Title>Marventa Framework</Title>
    <Authors>Marventa</Authors>
    <Company>Marventa</Company>
    <Description>Enterprise-ready modular framework for .NET 8.0/9.0 with Clean Architecture. Features: BaseDbContext with audit/soft-delete/multi-tenancy, 88 organized interfaces across 17 domains, Repository/UnitOfWork patterns, CQRS with MediatR Behaviors (Validation, Logging, Transaction), Sagas, Event Sourcing, CDN integration, and comprehensive infrastructure services. Built with SOLID principles for scalable enterprise applications.</Description>
    <Copyright>Copyright © Marventa 2024</Copyright>
    <PackageProjectUrl>https://github.com/AdemKinatas/Marventa.Framework</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>clean-architecture;basedbcontext;repository-pattern;unit-of-work;cqrs;mediatr;pipeline-behaviors;saga-pattern;event-sourcing;multi-tenancy;soft-delete;audit-trail;mongodb;entity-framework;solid-principles;ddd;enterprise;aspnetcore;modular;microservices</PackageTags>
    <RepositoryUrl>https://github.com/AdemKinatas/Marventa.Framework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>v3.3.1: Professional Documentation - Complete rewrite of NuGet README with table of contents, clear sections, step-by-step examples, and real-world usage scenarios. Perfect for developers worldwide to quickly understand and use the framework. Includes comprehensive CQRS patterns, repository examples, and configuration guides. No breaking changes.</PackageReleaseNotes>
    <PackageReadmeFile>README.nuget.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.nuget.md" Pack="true" PackagePath="\" />
    <None Include="..\icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Marventa.Framework.Core\Marventa.Framework.Core.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Domain\Marventa.Framework.Domain.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Application\Marventa.Framework.Application.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Infrastructure\Marventa.Framework.Infrastructure.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Web\Marventa.Framework.Web.csproj" PrivateAssets="all" />
  </ItemGroup>

  <!-- Include all assemblies in the package -->
  <ItemGroup>
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Core.dll" PackagePath="lib/net8.0" Condition="'$(TargetFramework)' == 'net8.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Domain.dll" PackagePath="lib/net8.0" Condition="'$(TargetFramework)' == 'net8.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Application.dll" PackagePath="lib/net8.0" Condition="'$(TargetFramework)' == 'net8.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Infrastructure.dll" PackagePath="lib/net8.0" Condition="'$(TargetFramework)' == 'net8.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Web.dll" PackagePath="lib/net8.0" Condition="'$(TargetFramework)' == 'net8.0'" />

    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Core.dll" PackagePath="lib/net9.0" Condition="'$(TargetFramework)' == 'net9.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Domain.dll" PackagePath="lib/net9.0" Condition="'$(TargetFramework)' == 'net9.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Application.dll" PackagePath="lib/net9.0" Condition="'$(TargetFramework)' == 'net9.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Infrastructure.dll" PackagePath="lib/net9.0" Condition="'$(TargetFramework)' == 'net9.0'" />
    <TfmSpecificPackageFile Include="$(OutputPath)Marventa.Framework.Web.dll" PackagePath="lib/net9.0" Condition="'$(TargetFramework)' == 'net9.0'" />
  </ItemGroup>

</Project>
