<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Configuration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>Marventa.Framework</PackageId>
    <PackageVersion>1.1.0</PackageVersion>
    <VersionPrefix>1.1.0</VersionPrefix>
    <VersionSuffix Condition="'$(VersionSuffix)' == ''"></VersionSuffix>
    <Title>Marventa Framework</Title>
    <Authors>Marventa</Authors>
    <Company>Marventa</Company>
    <Description>A comprehensive .NET framework following Clean Architecture principles with JWT authentication, CQRS, caching, rate limiting, health checks, messaging infrastructure (RabbitMQ+MassTransit, Kafka), and more.</Description>
    <Copyright>Copyright © Marventa 2024</Copyright>
    <PackageProjectUrl>https://github.com/AdemKinatas/Marventa.Framework</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>framework;clean-architecture;jwt;cqrs;caching;rate-limiting;health-checks;messaging;rabbitmq;kafka;masstransit;aspnetcore</PackageTags>
    <RepositoryUrl>https://github.com/AdemKinatas/Marventa.Framework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>v1.1.0: Added comprehensive messaging infrastructure with RabbitMQ+MassTransit and Apache Kafka support, including unified IMessageBus interface, retry policies, circuit breakers, and extensive configuration options.</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Marventa.Framework.Core\Marventa.Framework.Core.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Domain\Marventa.Framework.Domain.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Application\Marventa.Framework.Application.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Infrastructure\Marventa.Framework.Infrastructure.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Web\Marventa.Framework.Web.csproj" />
  </ItemGroup>

</Project>
