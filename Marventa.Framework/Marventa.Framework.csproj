<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Configuration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>Marventa.Framework</PackageId>
    <PackageVersion>2.11.0</PackageVersion>
    <VersionPrefix>2.11.0</VersionPrefix>
    <VersionSuffix Condition="'$(VersionSuffix)' == ''"></VersionSuffix>
    <Title>Marventa Framework</Title>
    <Authors>Marventa</Authors>
    <Company>Marventa</Company>
    <Description>Enterprise-ready modular file management framework for .NET 8.0/9.0. Provides intelligent file processing, multi-provider storage (Azure Blob, AWS S3), CDN integration, AI-powered content analysis, and comprehensive metadata management. Built with Clean Architecture and SOLID principles. Pay-as-you-use modular design - enable only the features you need. Perfect for modern applications requiring robust file handling capabilities.</Description>
    <Copyright>Copyright © Marventa 2024</Copyright>
    <PackageProjectUrl>https://github.com/AdemKinatas/Marventa.Framework</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>file-management;image-processing;storage;cdn;ai-ml;content-analysis;azure-blob;aws-s3;clean-architecture;modular;file-upload;image-optimization;metadata;search;analytics;aspnetcore;enterprise;solid-principles;pay-as-you-use</PackageTags>
    <RepositoryUrl>https://github.com/AdemKinatas/Marventa.Framework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>v2.11.0: Complete framework cleanup and modular architecture redesign. Removed unused extensions and mock implementations. Streamlined core APIs with MarventaExtensions for full modular control (Enterprise, Standard, Core configurations). Clean namespace structure with only essential extensions exposed. Production-ready single package with proper separation of concerns. Perfect for enterprise applications requiring selective feature activation.</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Marventa.Framework.Core\Marventa.Framework.Core.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Domain\Marventa.Framework.Domain.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Application\Marventa.Framework.Application.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Infrastructure\Marventa.Framework.Infrastructure.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\Marventa.Framework.Web\Marventa.Framework.Web.csproj" PrivateAssets="all" />
  </ItemGroup>

  <Target Name="IncludeReferencedProjectsOutput" BeforeTargets="Pack">
    <ItemGroup>
      <!-- .NET 8.0 -->
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net8.0\Marventa.Framework.Core.dll">
        <PackagePath>lib/net8.0/</PackagePath>
        <TargetFramework>net8.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net8.0\Marventa.Framework.Domain.dll">
        <PackagePath>lib/net8.0/</PackagePath>
        <TargetFramework>net8.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net8.0\Marventa.Framework.Application.dll">
        <PackagePath>lib/net8.0/</PackagePath>
        <TargetFramework>net8.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net8.0\Marventa.Framework.Infrastructure.dll">
        <PackagePath>lib/net8.0/</PackagePath>
        <TargetFramework>net8.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net8.0\Marventa.Framework.Web.dll">
        <PackagePath>lib/net8.0/</PackagePath>
        <TargetFramework>net8.0</TargetFramework>
      </TfmSpecificPackageFile>

      <!-- .NET 9.0 -->
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net9.0\Marventa.Framework.Core.dll">
        <PackagePath>lib/net9.0/</PackagePath>
        <TargetFramework>net9.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net9.0\Marventa.Framework.Domain.dll">
        <PackagePath>lib/net9.0/</PackagePath>
        <TargetFramework>net9.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net9.0\Marventa.Framework.Application.dll">
        <PackagePath>lib/net9.0/</PackagePath>
        <TargetFramework>net9.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net9.0\Marventa.Framework.Infrastructure.dll">
        <PackagePath>lib/net9.0/</PackagePath>
        <TargetFramework>net9.0</TargetFramework>
      </TfmSpecificPackageFile>
      <TfmSpecificPackageFile Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\net9.0\Marventa.Framework.Web.dll">
        <PackagePath>lib/net9.0/</PackagePath>
        <TargetFramework>net9.0</TargetFramework>
      </TfmSpecificPackageFile>
    </ItemGroup>
  </Target>

</Project>
