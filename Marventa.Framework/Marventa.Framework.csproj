<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Configuration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>Marventa.Framework</PackageId>
    <PackageVersion>2.0.2</PackageVersion>
    <VersionPrefix>2.0.2</VersionPrefix>
    <VersionSuffix Condition="'$(VersionSuffix)' == ''"></VersionSuffix>
    <Title>Marventa Framework</Title>
    <Authors>Marventa</Authors>
    <Company>Marventa</Company>
    <Description>A comprehensive .NET framework following Clean Architecture principles with JWT authentication, CQRS, caching, rate limiting, health checks, messaging infrastructure (RabbitMQ+MassTransit, Kafka), multi-tenancy, outbox/inbox patterns, HTTP idempotency, OpenTelemetry observability, Saga/Process Manager, MongoDB projections, FluentValidation pipeline, enhanced Swagger/OpenAPI, localization, money value objects, domain events, search abstractions, storage abstraction, security hardening, auditing, background jobs, configuration management, and DevEx tools.</Description>
    <Copyright>Copyright © Marventa 2024</Copyright>
    <PackageProjectUrl>https://github.com/AdemKinatas/Marventa.Framework</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>framework;clean-architecture;jwt;cqrs;caching;rate-limiting;health-checks;messaging;rabbitmq;kafka;masstransit;aspnetcore;multitenancy;outbox;inbox;idempotency;opentelemetry;observability;saga;projections;mongodb;fluentvalidation;swagger;localization;money;domainevent;elasticsearch;s3;security;auditing;hangfire;configuration;devex</PackageTags>
    <RepositoryUrl>https://github.com/AdemKinatas/Marventa.Framework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>v2.0.2: Complete Professional Documentation with 18 Enterprise Features! Comprehensive README with detailed usage examples for Multi-Tenancy, Transactional Messaging (Outbox/Inbox), HTTP Idempotency, OpenTelemetry Observability, Entity Framework Multi-Tenant Support, Saga/Process Manager, Read Model Projections, FluentValidation Integration, Elasticsearch Search, Distributed Caching, Distributed Locking, Rate Limiting, API Versioning, Health Checks, Security Features, Circuit Breaker Pattern, Event Store, and complete v1.3 setup. Clean Architecture refactoring applied with proper layer separation and SOLID principles.</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Marventa.Framework.Core\Marventa.Framework.Core.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Domain\Marventa.Framework.Domain.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Application\Marventa.Framework.Application.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Infrastructure\Marventa.Framework.Infrastructure.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Web\Marventa.Framework.Web.csproj" />
  </ItemGroup>

</Project>
