<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Configuration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>Marventa.Framework</PackageId>
    <PackageVersion>2.12.0</PackageVersion>
    <VersionPrefix>2.12.0</VersionPrefix>
    <VersionSuffix Condition="'$(VersionSuffix)' == ''"></VersionSuffix>
    <Title>Marventa Framework</Title>
    <Authors>Marventa</Authors>
    <Company>Marventa</Company>
    <Description>Enterprise-ready modular file management framework for .NET 8.0/9.0. Provides intelligent file processing, multi-provider storage (Azure Blob, AWS S3), CDN integration, AI-powered content analysis, and comprehensive metadata management. Built with Clean Architecture and SOLID principles. Pay-as-you-use modular design - enable only the features you need. Perfect for modern applications requiring robust file handling capabilities.</Description>
    <Copyright>Copyright © Marventa 2024</Copyright>
    <PackageProjectUrl>https://github.com/AdemKinatas/Marventa.Framework</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>file-management;image-processing;storage;cdn;ai-ml;content-analysis;azure-blob;aws-s3;clean-architecture;modular;file-upload;image-optimization;metadata;search;analytics;aspnetcore;enterprise;solid-principles;pay-as-you-use</PackageTags>
    <RepositoryUrl>https://github.com/AdemKinatas/Marventa.Framework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>v2.12.0: Major feature release! Added production-ready CDN service implementations for Azure, AWS, and CloudFlare with complete metrics, invalidation, and transformation support. Introduced Saga pattern for distributed transaction orchestration with compensation logic. Enhanced repository pattern with caching integration. Fixed all Clean Architecture compliance issues. Comprehensive documentation with real-world usage examples for all new features. 100% build success with .NET 8.0/9.0 support.</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Marventa.Framework.Core\Marventa.Framework.Core.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Domain\Marventa.Framework.Domain.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Application\Marventa.Framework.Application.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Infrastructure\Marventa.Framework.Infrastructure.csproj" />
    <ProjectReference Include="..\Marventa.Framework.Web\Marventa.Framework.Web.csproj" />
  </ItemGroup>

  <!-- Manual assembly inclusion removed - using normal NuGet dependencies -->

</Project>
