{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsAllowedOrigins": ["*"],
  "ExceptionHandling": {
    "Enabled": true,
    "LogExceptions": true,
    "IncludeExceptionDetails": true,
    "IncludeStackTrace": true,
    "DefaultErrorMessage": "An error occurred while processing your request"
  },
  "Swagger": {
    "Enabled": true,
    "Title": "Marventa Framework Test API",
    "Version": "v1",
    "Description": "Test API for Marventa Framework features",
    "RequireAuthorization": false,
    "EnvironmentRestriction": "Development"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=MarventaFrameworkTest;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Caching": {
    "UseRedis": false,
    "UseInMemory": true,
    "DefaultExpirationMinutes": 30
  },
  "Authentication": {
    "ApiKeys": [
      {
        "Key": "test-api-key-12345",
        "Owner": "TestClient",
        "Roles": "Admin,User"
      },
      {
        "Key": "readonly-key-67890",
        "Owner": "ReadOnlyClient",
        "Roles": "User"
      }
    ]
  },
  "LoggingOptions": {
    "EnableRequestResponseLogging": true,
    "MaxBodyLogSize": 4096,
    "LogRequestHeaders": true,
    "LogRequestBody": true,
    "LogResponseHeaders": true,
    "LogResponseBody": true,
    "SensitiveHeaders": [
      "Authorization",
      "X-API-Key",
      "Cookie",
      "Set-Cookie"
    ],
    "SensitiveBodyFields": [
      "password",
      "token",
      "secret",
      "apikey"
    ]
  }
}
